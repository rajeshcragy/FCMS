<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape
        android:thickness="0dp"
        android:shape="rectangle">
      <solid
          android:color="#7ff27f" />
      <stroke
          android:width="2dp"
          android:color="#FF9108"/>
      <corners
          android:radius="6dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ccf9cc"
          android:endColor="#7ff27f"
          android:type="linear"
          android:angle="270" />
      <stroke
          android:width="2dp"
          android:color="#FF9108"/>
      <corners
          android:radius="6dp" />
    </shape>
  </item>
</selector>